{
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 4],
    "semi": "error",
    "eqeqeq": "error",

    "quotes": ["error", "double"],

    "complexity": ["error", { "max": 4 }],
    "max-depth": ["error", { "max": 4 }],
    "max-nested-callbacks": ["error", { "max": 4 }],
    "max-params": ["error", { "max": 4 }],
    "max-statements": ["error", { "max": 20 }],
    "max-len": ["error", { "code": 120 }]
  },
  "env": {
    "browser": true,
    "node": true
  }
}